<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item"><img src="~/logo2.png" style="width:35px;height:35px"/></li>
                    <li class="nav-item">@Html.ActionLink("Order","Index","Order",null,new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Tender", "Index", "Tender", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("FC/ATK", "Index", "FCATK", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Persediaan", "Index", "Stock", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Mesin Produksi", "Index", "MesinProduksi", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; - Bintang Mas Corp. All rights reserved. (@DateTime.Now.Year)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap-darkly")
    @RenderSection("scripts", required: false)
</body>
</html>
